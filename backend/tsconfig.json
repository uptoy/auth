{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",           /* ソースファイルのルートディレクトリ */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": ["src/**/*.ts"],     /* srcディレクトリ以下をコンパイル対象に */
  "exclude": ["node_modules"]
}
